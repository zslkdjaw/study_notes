<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/order_id"
        android:layout_width="270dp"
        android:layout_height="18dp"
        android:fontFamily="sans-serif-black"
        android:text="000000000001X"
        android:textColor="#EF6C00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toEndOf="@+id/label_id"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_money"
        android:layout_width="67dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:fontFamily="sans-serif-black"
        android:text="总付款 : "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_time"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/order_pay"
        android:layout_width="76dp"
        android:layout_height="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="sans-serif-black"
        android:text="100.00元"
        android:textColor="#D84315"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/label_money"
        app:layout_constraintTop_toBottomOf="@+id/label_id"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/label_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:fontFamily="sans-serif-black"
        android:text="订单号 : "
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/label_time"
        android:layout_width="68dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:fontFamily="sans-serif-black"
        android:text="订单时间 : "
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_id"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/order_time"
        android:layout_width="137dp"
        android:layout_height="23dp"
        android:fontFamily="sans-serif-black"
        android:text="00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/label_time"
        app:layout_constraintTop_toBottomOf="@+id/label_id"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>