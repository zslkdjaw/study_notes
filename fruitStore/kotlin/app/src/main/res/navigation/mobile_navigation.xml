<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="cn.bnuz.mystore.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_shoppingCar"
        android:name="cn.bnuz.mystore.ui.cart.CartFragment"
        android:label="@string/title_shopping_cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/navigation_orders"
        android:name="cn.bnuz.mystore.ui.orders.OrdersFragment"
        android:label="@string/title_order_list"
        tools:layout="@layout/fragment_orders" />
    <fragment
        android:id="@+id/navigation_account"
        android:name="cn.bnuz.mystore.ui.account.AccountFragment"
        android:label="@string/title_account"
        tools:layout="@layout/fragment_account" />

</navigation>